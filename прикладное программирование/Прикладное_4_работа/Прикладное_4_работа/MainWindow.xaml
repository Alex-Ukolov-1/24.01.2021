            <Button  x:Name="terra3" Content="загрузить" HorizontalAlignment="Left" Margin="10,259,0,0" VerticalAlignment="Top" Width="144" Height="24" Click="Button_Click_3" Visibility="Hidden"/>
            <Button  x:Name="terra4" Content="разгрузить" HorizontalAlignment="Left" Margin="10,307,0,0" VerticalAlignment="Top" Width="144" Height="24" Click="Button_Click_4" Visibility="Hidden"/>
            <Button  x:Name="terra5" Content="дать энергию" HorizontalAlignment="Left" Margin="10,356,0,0" VerticalAlignment="Top" Width="144" Height="24" Click="Button_Click_5"/>
            <Label  x:Name="terra6" Content="введите указанный этаж" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        </Grid>
        <TextBlock  x:Name="terra7" Text="smart" Foreground="White" Height="420" Width="200"></TextBlock>
        <Grid x:Name="gr3" HorizontalAlignment="Left" Width="100" Height="100" VerticalAlignment="Bottom" Margin="343,0,0,10" Background="Gold"></Grid>
        <Label Content="вначале необходимо включить электричество" HorizontalAlignment="Left" Margin="10,331,0,0" VerticalAlignment="Top"/>
        <Label Content="1 этажl" HorizontalAlignment="Left" Margin="520,261,0,0" VerticalAlignment="Top"/>
        <Label Content="2 этаж" HorizontalAlignment="Left" Margin="520,155,0,0" VerticalAlignment="Top"/>
        <Label Content="3 этаж" HorizontalAlignment="Left" Margin="520,38,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
